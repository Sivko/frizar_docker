server {
    listen 80;
    server_name _;

    root /var/www/html/backend;

    # API обработка
    location ~ ^/api/v2/(.*)$ {
        alias /var/www/html/backend/api/v2/public/;
        try_files $1 $1/ @php;
        index index.php;
    }

    location @php {
        fastcgi_split_path_info ^(/api/v2)(/.*)$;
        fastcgi_pass unix:/var/run/php/php8.3-fpm.sock;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME /var/www/html/backend/api/v2/public/index.php;
        fastcgi_param REQUEST_URI $fastcgi_path_info;
        fastcgi_read_timeout 900;
    }

    # Основная конфигурация для Bitrix
    location / {
        root /var/www/html/backend;
        index index.php;

        try_files $uri $uri/ /bitrix/urlrewrite.php$is_args$args;

        location ~ .php$ {
            include fastcgi_params;
            fastcgi_pass unix:/var/run/php/php8.3-fpm.sock;
            fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
            fastcgi_param PATH_INFO $fastcgi_path_info;
            fastcgi_param PATH_TRANSLATED $document_root$fastcgi_path_info;
        }
    }


    # Логи
    error_log /var/log/nginx/error.log warn;
    access_log /var/log/nginx/access.log;
}